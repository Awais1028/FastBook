<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application

        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        tools:replace="android:fullBackupContent"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".home.FeedActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication2" />
        <activity
            android:name=".auth.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication3" />
        <activity
            android:name=".auth.EnterVerificationCodeActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication3" />
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication3" />
        <activity
            android:name=".auth.SignUpScreen"
            android:exported="false"
            android:theme="@style/Theme.MyApplication3" />
        <activity
            android:name=".auth.SignInScreen"
            android:exported="false"
            android:theme="@style/Theme.MyApplication3" />
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.MainActivity" />
    </application>

</manifest>