<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/faculty_map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/teacher_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faculty_map_toolbar"
        app:queryHint="Search for a teacher..." />

    <com.example.myapplication.offices.ZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/teacher_search_view">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:scrollable="true">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:scrollable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/faculty_map_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <!-- First Row -->
                    <TextView
                        android:id="@+id/room_1"
                        style="@style/OfficeCabin"
                        android:text="Room1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/room_2"
                        style="@style/OfficeCabin"
                        android:text="Room2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/room_1" />
                    <TextView
                        android:id="@+id/room_3"
                        style="@style/OfficeCabin"
                        android:text="Room3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/room_2" />
                    <TextView
                        android:id="@+id/room_4"
                        style="@style/OfficeCabin"
                        android:text="Room4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/room_3" />

                    <!-- Second Row -->
                    <TextView
                        android:id="@+id/room_5"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room5"
                        app:layout_constraintTop_toBottomOf="@id/room_1"
                        app:layout_constraintEnd_toEndOf="@id/room_1" />
                    <TextView
                        android:id="@+id/room_6"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room6"
                        app:layout_constraintTop_toBottomOf="@id/room_2"
                        app:layout_constraintEnd_toEndOf="@id/room_2" />
                    <TextView
                        android:id="@+id/room_7"
                        style="@style/OfficeCabin"
                        android:text="Room7"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/room_3"
                        app:layout_constraintEnd_toEndOf="@id/room_3" />
                    <TextView
                        android:id="@+id/room_8"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room8"
                        app:layout_constraintEnd_toEndOf="@id/room_4"
                        app:layout_constraintTop_toBottomOf="@id/room_4" />
                    <!-- Second Row Second Part-->
                    <TextView
                        android:id="@+id/room_9"
                        style="@style/OfficeCabin"
                        android:text="Room9"
                        app:layout_constraintTop_toBottomOf="@id/room_5"
                        app:layout_constraintEnd_toEndOf="@id/room_5" />
                    <TextView
                        android:id="@+id/room_10"
                        style="@style/OfficeCabin"
                        android:text="Room10"
                        app:layout_constraintTop_toBottomOf="@id/room_6"
                        app:layout_constraintEnd_toEndOf="@id/room_6" />
                    <TextView
                        android:id="@+id/room_11"
                        style="@style/OfficeCabin"
                        android:text="Room11"
                        app:layout_constraintTop_toBottomOf="@id/room_7"
                        app:layout_constraintEnd_toEndOf="@id/room_7" />
                    <TextView
                        android:id="@+id/room_12"
                        style="@style/OfficeCabin"
                        android:text="Room12"
                        app:layout_constraintEnd_toEndOf="@id/room_8"
                        app:layout_constraintTop_toBottomOf="@id/room_8" />

                    <!-- Third Row -->
                    <TextView
                        android:id="@+id/room_13"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room13"
                        app:layout_constraintTop_toBottomOf="@id/room_9"
                        app:layout_constraintEnd_toEndOf="@id/room_9" />
                    <TextView
                        android:id="@+id/room_14"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room14"
                        app:layout_constraintTop_toBottomOf="@id/room_10"
                        app:layout_constraintEnd_toEndOf="@id/room_10" />
                    <TextView
                        android:id="@+id/room_15"
                        style="@style/OfficeCabin"
                        android:text="Room15"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/room_11"
                        app:layout_constraintEnd_toEndOf="@id/room_11" />
                    <TextView
                        android:id="@+id/room_16"
                        style="@style/OfficeCabin"
                        android:layout_marginTop="24dp"
                        android:text="Room16"
                        app:layout_constraintEnd_toEndOf="@id/room_12"
                        app:layout_constraintTop_toBottomOf="@id/room_12" />
                    <!-- Third Row Second Part-->
                    <TextView
                        android:id="@+id/room_17"
                        style="@style/OfficeCabin"
                        android:text="Room17"
                        app:layout_constraintTop_toBottomOf="@id/room_13"
                        app:layout_constraintEnd_toEndOf="@id/room_13" />
                    <TextView
                        android:id="@+id/room_18"
                        style="@style/OfficeCabin"
                        android:text="Room18"
                        app:layout_constraintTop_toBottomOf="@id/room_14"
                        app:layout_constraintEnd_toEndOf="@id/room_14" />
                    <TextView
                        android:id="@+id/room_19"
                        style="@style/OfficeCabin"
                        android:text="Room19"
                        app:layout_constraintTop_toBottomOf="@id/room_15"
                        app:layout_constraintEnd_toEndOf="@id/room_15" />
                    <TextView
                        android:id="@+id/room_20"
                        style="@style/OfficeCabin"
                        android:text="Room20"
                        app:layout_constraintEnd_toEndOf="@id/room_16"
                        app:layout_constraintTop_toBottomOf="@id/room_16" />

                    <!-- Third Row Middle Column -->
                    <TextView
                        android:id="@+id/room_21"
                        style="@style/OfficeCabin"
                        android:text="Room21"
                        app:layout_constraintTop_toTopOf="@id/room_16"
                        app:layout_constraintEnd_toStartOf="@id/room_17" />
                    <TextView
                        android:id="@+id/room_22"
                        style="@style/OfficeCabin"
                        android:text="Room22"
                        app:layout_constraintTop_toTopOf="@id/room_16"
                        app:layout_constraintEnd_toStartOf="@id/room_21" />
                    <TextView
                        android:id="@+id/room_23"
                        style="@style/OfficeCabin"
                        android:text="Room23"
                        app:layout_constraintEnd_toStartOf="@id/room_22"
                        app:layout_constraintTop_toTopOf="@id/room_16" />
                    <TextView
                        android:id="@+id/room_24"
                        style="@style/OfficeCabin"
                        android:text="Room24"
                        app:layout_constraintEnd_toStartOf="@id/room_23"
                        app:layout_constraintTop_toTopOf="@id/room_16" />

                    <TextView
                        android:id="@+id/room_25"
                        style="@style/OfficeCabin"
                        android:text="Room25"
                        app:layout_constraintTop_toBottomOf="@id/room_21"
                        app:layout_constraintEnd_toEndOf="@id/room_21" />
                    <TextView
                        android:id="@+id/room_26"
                        style="@style/OfficeCabin"
                        android:text="Room26"
                        app:layout_constraintTop_toBottomOf="@id/room_22"
                        app:layout_constraintEnd_toEndOf="@id/room_22" />
                    <TextView
                        android:id="@+id/room_27"
                        style="@style/OfficeCabin"
                        android:text="Room27"
                        app:layout_constraintTop_toBottomOf="@id/room_23"
                        app:layout_constraintEnd_toEndOf="@id/room_23" />
                    <TextView
                        android:id="@+id/room_28"
                        style="@style/OfficeCabin"
                        android:text="Room28"
                        app:layout_constraintEnd_toEndOf="@id/room_24"
                        app:layout_constraintTop_toBottomOf="@id/room_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </HorizontalScrollView>
    </com.example.myapplication.offices.ZoomLayout>
</RelativeLayout>