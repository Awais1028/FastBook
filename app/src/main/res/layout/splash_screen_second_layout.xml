<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/splashscreensecondlayoutid"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FASTBook"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Container for diamond images -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/diamondContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp">

        <!-- Top diamond image -->

        <!-- Left diamond image -->

        <!-- Right diamond image -->

        <!-- Bottom diamond image -->

        <!--android:layout_marginEnd="54dp"
            android:layout_alignBottom="@id/imageTop"
            android:layout_marginBottom="-93dp"
            android:layout_toStartOf="@+id/imageRight"-->


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageTop"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_img_bottom"
            app:layout_constraintEnd_toEndOf="@+id/imageBottom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageBottom"
            app:layout_constraintTop_toBottomOf="@+id/imageBottom"
            app:shapeAppearanceOverlay="@style/DiamondCut" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageLeft"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_img_left"
            app:layout_constraintEnd_toEndOf="@+id/imageBottom"
            app:layout_constraintTop_toTopOf="@+id/imageBottom"
            app:shapeAppearanceOverlay="@style/DiamondCut" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageRight"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@id/imageTop"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageTop"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_img_right"
            app:layout_constraintStart_toEndOf="@+id/imageLeft"
            app:layout_constraintTop_toTopOf="@+id/imageLeft"
            app:shapeAppearanceOverlay="@style/DiamondCut" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageBottom"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/imageTop"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="92dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_img1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/DiamondCut" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>