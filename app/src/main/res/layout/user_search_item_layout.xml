<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_profile"
        app:civ_border_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Marc Stegen"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#111111"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintEnd_toStartOf="@id/time_text"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/message_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hey wassup.. whatâ€™s going on .."
        android:textSize="13sp"
        android:textColor="#6F6F6F"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintEnd_toStartOf="@id/unread_badge"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 PM"
        android:textSize="12sp"
        android:textColor="#8A8A8A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/username" />

    <TextView
        android:id="@+id/unread_badge"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:text="5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/bg_unread_badge"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_text"
        android:layout_marginTop="6dp"/>

    <!-- Online/offline dots (small) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_status_online"
        app:layout_constraintEnd_toEndOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_status_offline"
        app:layout_constraintEnd_toEndOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EFEFEF"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
